@model DutchPainters.ViewModels.CreatePaintingVm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Painting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Painting.Name" class="control-label"></label>
                <input asp-for="Painting.Name" class="form-control" />
                <span asp-validation-for="Painting.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.YearPainted" class="control-label"></label>
                <input asp-for="Painting.YearPainted" class="form-control" />
                <span asp-validation-for="Painting.YearPainted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.ImageURL" class="control-label"></label>
                <input asp-for="Painting.ImageURL" class="form-control" />
                <span asp-validation-for="Painting.ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Painter" class="control-label"></label>
                <select asp-for="Painting.Painter.Id" asp-items="Model.AllPainters" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
